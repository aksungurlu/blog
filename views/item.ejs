<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    <%=blog.title%>
  </div>
  <div class="ui rounded centered image">
    <img src="<%=blog.image%>" alt="Blog image">
  </div>
  <div class="ui container">
    <%-blog.body%>
  </div>
  <div class="ui divider"></div>
  <div class="ui container date">
    <em><%=blog.date.toDateString()%></em>
  </div>
  <a href="/blog/<%= blog.id %>/edit" class="ui orange basic button">Edit</a>
  <form id="delete" class="ui form" action="/blog/<%= blog.id %>?_method=DELETE" method="post">
    <button class="ui red basic button">Delete</button>
  </form>
</div>

<% include partials/footer %>
