<%include partials/header%>

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit <%= blog.title %>
  </div>
  <form class="ui form" action="/blog" method="post">
    <div class="field">
      <label for="blog[title]">Title</label>
      <input type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
      <label for="blog[image]">Image</label>
      <input type="text" name="blog[image]" placeholder="image">
    </div>
    <div class="field">
      <label for="blog[title]">Body</label>
      <textarea name="blog[body]"></textarea>
    </div>
    <input type="submit" class="ui violet basic button">
  </form>
</div>

<%include partials/footer%>
